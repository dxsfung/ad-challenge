<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <h2 class="text-center"><img src="/assets/images/signup.png" class="img-circle" height="150" width="150" ><br>Sign Up</h2>
          
      </div>

      <div class="modal-body">
          <form class="form col-md-12 center-block">

          	<div class="form-group">
              {{input type="text" value=firstName placeholder="First Name" class="form-control"}}
            </div>

            <div class="form-group">
              {{input type="text" value=lastName placeholder="Last Name" class="form-control"}}
            </div>

            <div class="form-group">
              {{input type="text" value=email placeholder="Email" class="form-control"}}
            </div>

            <div class="form-group">
              {{input type="password" value=password placeholder="Password" class="form-control"}}
            </div>

            <div class="form-group">
              <button class="btn btn-primary" {{action "signUp"}}>
               <span class="signup-style">Sign Up </span></button>
              
            </div>

          </form>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
    	  </div>	
      </div>
  </div>
  </div>
</div>